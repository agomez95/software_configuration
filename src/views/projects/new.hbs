<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-6">
<div class="card">
            <div class="cart">
                <div class="card-header text-center">
                    <h5 class="card-title text-center"><b>Nuevo Proyecto</b></h5>
                </div>
                <div class="card-body">
                    <form action="/projects/new" method="POST">
                        <div class="form-group">
                            <label for="name_proyecto">Nombre:</label>
                            <input type="text" class="form-control" name="projectname" id="projectname" placeholder="Enter the name of the project">
                        </div>
                        <div class="form-group">
                            <label for="name_proyecto">Descripcion:</label>
                            <textarea class="form-control" name="description" id="description" rows="3" placeholder="Enter a small description of the project"></textarea>
                        </div>
                        <div class="col text-center">
                            <button type="submit" class="btn btn-primary">Guardar</button>
                        </div>                        
                    </form>
                </div>
            </div>
        </div>
        </div>        
    </div>
</div>